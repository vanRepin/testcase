<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="item" type="com.vanrepin.repinassignment.data.CurrencyItem"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/flag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="16dp"
                app:riv_corner_radius="20dp"

        />

        <TextView
                android:id="@+id/currencyText"
                android:text="@{item.currency}"
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/flag"
                app:layout_constraintEnd_toStartOf="@id/valueText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/currencyNameText"
                android:layout_marginBottom="2dp"
                style="@style/CurrencyCodeText"

                app:layout_constraintVertical_chainStyle="packed"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"/>
        <TextView
                android:id="@+id/currencyNameText"
                android:text="@{item.currencyName}"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/currencyText"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CurrencyNameText"
                app:layout_constraintStart_toEndOf="@id/flag"
                app:layout_constraintEnd_toStartOf="@id/valueText"

                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"/>
        <EditText
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/valueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CurrencyValueText"
                android:text="@{item.value.toString()}"
                android:layout_marginEnd="16dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>